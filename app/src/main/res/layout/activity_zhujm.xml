<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bj1"
    tools:context="com.example.a86136.grlc.ZhujmActivity">
    <RelativeLayout
        android:id="@+id/R1"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:padding="5dp"
        android:background="#809de1">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/toux1"/>
        <TextView
            android:id="@+id/zhangh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="20dp"
            android:textColor="#fff"/>
    </RelativeLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stretchColumns="4"
        android:layout_below="@id/R1">
        <TableRow
            android:padding="15dp">
            <LinearLayout
                android:layout_column="0"
                android:orientation="vertical">
            <ImageView
                android:id="@+id/i1"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:padding="10dp"
                android:src="@drawable/tubiao10" />
            <TextView
                android:id="@+id/t1"
                android:layout_width="95dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="新增支出"/>
            </LinearLayout>
            <LinearLayout
                android:layout_column="1"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/i2"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:padding="10dp"
                     android:src="@drawable/tubiao5"/>
                <TextView
                    android:id="@+id/t2"
                    android:layout_width="95dp"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:text="新增收入"/>
            </LinearLayout>
            <LinearLayout
                android:layout_column="2"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/i3"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:padding="10dp"
                     android:src="@drawable/tubiao11"/>
                <TextView
                    android:id="@+id/t3"
                    android:layout_width="95dp"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:text="我的支出"/>
            </LinearLayout>
        <LinearLayout
            android:layout_column="3"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/i4"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:padding="10dp"
                android:src="@drawable/tubiao3" />
            <TextView
                android:id="@+id/t4"
                android:layout_width="95dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="我的收入"/>
        </LinearLayout> </TableRow>

    <TableRow
        android:padding="15dp">
        <LinearLayout
            android:layout_column="0"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/i6"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:padding="10dp"
                android:src="@drawable/tubiao4" />
            <TextView
                android:id="@+id/t6"
                android:layout_width="95dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="系统设置"/>
        </LinearLayout>
        <LinearLayout
            android:layout_column="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/i7"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:padding="10dp"
                android:src="@drawable/tubiao7" />
            <TextView
                android:id="@+id/t7"
                android:layout_width="95dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="收支便签"/>
        </LinearLayout>
        <LinearLayout
            android:layout_column="2"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/i8"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:padding="10dp"
                 android:src="@drawable/tubiao8"/>
            <TextView
                android:id="@+id/t8"
                android:layout_width="95dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="退出"/>
        </LinearLayout>
    </TableRow>
    </TableLayout>

</RelativeLayout>
