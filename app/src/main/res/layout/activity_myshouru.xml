<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bj0"
    tools:context="com.example.a86136.grlc.MyshouruActivity">
    <RelativeLayout
        android:id="@+id/R1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="5dp"
        android:background="#809de1">
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/toux1"/>
        <Button
            android:id="@+id/fh"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#809de1"
            android:text="返回"
            android:textSize="20dp"
            android:textColor="#fff"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:textSize="35dp"
        android:text="收入管理"
        android:textColor="#4e4e4e"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="时间："/>
        <EditText
            android:id="@+id/intime"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_toRightOf="@+id/t1"/>
        <TextView
            android:id="@+id/t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t1"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:text="类别："/>
        <EditText
            android:id="@+id/inleib"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_toRightOf="@+id/t2"
            android:layout_below="@+id/intime"/>
        <Button
            android:id="@+id/chaxun"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:background="#809de1"
            android:text="查询"
            android:textSize="20dp"
            android:textColor="#fff"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="时间"
            android:textSize="15dp"
            android:textColor="#fff"
            android:gravity="center"
            android:background="#809de1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="类别"
            android:textSize="15dp"
            android:textColor="#fff"
            android:gravity="center"
            android:background="#809de1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="金额"
            android:textSize="15dp"
            android:textColor="#fff"
            android:gravity="center"
            android:background="#809de1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="付款方"
            android:textSize="15dp"
            android:textColor="#fff"
            android:gravity="center"
            android:background="#809de1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="修改"
            android:textSize="15dp"
            android:textColor="#fff"
            android:gravity="center"
            android:background="#809de1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="删除"
            android:textSize="15dp"
            android:textColor="#fff"
            android:gravity="center"
            android:background="#809de1"/>
    </LinearLayout>
    <ListView
        android:id="@+id/lv"
        android:descendantFocusability="afterDescendants"
        android:layout_width="match_parent"
        android:layout_height="250dp"></ListView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Button
        android:id="@+id/add"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:background="#809de1"
        android:gravity="center"
        android:text="新增收入"
        android:textSize="20dp"
        android:textColor="#fff"/></RelativeLayout>

</LinearLayout>
