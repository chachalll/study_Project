<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.a86136.grlc.SzmangerActivity">
    <RelativeLayout
        android:id="@+id/R1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="5dp"
        android:background="#6383cf">
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/toux1"/>
        <Button
            android:id="@+id/fh"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#4d73a2"
            android:text="返回"
            android:textSize="20dp"
            android:textColor="#fff"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="30dp"
        android:text="收支管理"
        android:textColor="#4e4e4e"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/t1"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:textSize="12dp"
            android:text="时间："/>
        <EditText
            android:id="@+id/intime"
            android:layout_width="75dp"
            android:layout_height="35dp"
            android:textSize="10dp"
            android:layout_toRightOf="@+id/t1"/>
        <TextView
            android:id="@+id/t2"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_below="@+id/t1"
            android:layout_marginLeft="5dp"
            android:textSize="12dp"
            android:text="类别："/>
        <EditText
            android:id="@+id/inleib"
            android:layout_width="75dp"
            android:layout_height="35dp"
            android:textSize="10dp"
            android:layout_toRightOf="@+id/t2"
            android:layout_below="@+id/intime"/>
        <Button
            android:id="@+id/chaxun"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:text="查询"
            android:textSize="15dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="时间"
            android:textSize="15dp"
            android:textColor="#fff"
            android:gravity="center"
            android:background="#6383cf"/>
        <TextView
            android:id="@+id/leib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="类别"
            android:textSize="15dp"
            android:textColor="#fff"
            android:gravity="center"
            android:background="#6383cf"/>
        <TextView
            android:id="@+id/money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="金额"
            android:textSize="15dp"
            android:textColor="#fff"
            android:gravity="center"
            android:background="#6383cf"/>
    </LinearLayout>
    <ListView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="5dp"></ListView>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/addsr"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/addzc"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:text="新增收入"
            android:textSize="18dp"/>
        <Button
            android:id="@+id/addzc"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:text="新增支出"
            android:textSize="18dp"/></RelativeLayout>

</LinearLayout>
